#include <stdio.h>
int main(){
	int rows;
	printf("Number of rows: ");
	scanf("%d", &rows);
	for (int i = rows; i >= 1; i--) {
		for (int j = 1; j <= i; j++) {
			printf("%d ", i);
		}
		printf("\n");
	}
	return 0;
}
//this code prints the sequence as following 
//Inverted half pyramid
//5 5 5 5 5
//4 4 4 4
//3 3 3
//2 2 
//1

